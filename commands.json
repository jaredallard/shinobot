{
  "events": [{
    "interval": 900000,
    "type": "timer",
    "function": "postImage"
  },
  {
    "type": "one-shot",
    "target": "init",
    "function": "postImage"
  },
  {
    "type": "one-shot",
    "target": "init",
    "function": "updateLocation"
  }],
  "commands": [{
    "stream": "mentions",
    "pattern": {
      "string": "version",
      "flag": "gi"
    },
    "function": "getVersion",
    "response": "v: {{version}} c: {{commit}}"
  },
  {
    "stream": "mentions",
    "pattern": {
      "string": "((send|get|another)( me)?( [an]+)?) (image|picture|pic|img)",
      "flag": "gi"
    },
    "function": "denyImage"
  },
  {
    "stream": "mentions",
    "pattern": {
      "string": "i love you",
      "flag": "gi"
    },
    "function": "love"
  }],
  "streams": [
    "home",
    "mentions"
  ]
}
